    <h3>You have visited recipes {{countVisit}} times.</h3>
        <h2>{{recipe.title}}</h2>
        <h3>Ingredients</h3>
        <ul>
            {{#each recipe.ingredients as |ingredient|}}
            <li>{{ingredient.amount}} {{ingredient.name}} {{ingredient.details}}</li>
            {{/each}}
        </ul>
        
        <h3>Instructions</h3>
        <p>{{recipe.instructions}}</p>
        
        <a href="/">Back to Home</a>
