{{#extend "main"}}
    {{#content "body"}}
        <h2>{{recipe.title}}</h2>
        <h3>Ingredients</h3>
        <ul>
            {{#each recipe.ingredients}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        
        <h3>Instructions</h3>
        <p>{{recipe.instructions}}</p>
        
        <a href="/">Back to Home</a>
    {{/content}}
{{/extend}}
