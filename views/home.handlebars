<h2>Welcome to the Recipe Book</h2>
<section id="recipes-section">
  <h2>Recipes</h2>
  {{#if recipes.length}}
    <ul>
      {{#each recipes}}
        <li class="recipe">
          <h3>{{this.name}}</h3>
          <p>{{this.description}}</p>
          <a href="/recipes/{{this.id}}">View Recipe</a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No recipes available. Please check back later.</p>
  {{/if}}
</section>