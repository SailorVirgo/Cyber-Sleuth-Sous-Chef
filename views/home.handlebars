<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/jass.css" />
  </head>
  <body>
    <header>
      <h1>Welcome to the Recipe Website</h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          {{#if logged_in}}
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/logout">Logout</a></li>
          {{else}}
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
          {{/if}}
        </ul>
      </nav>
    </header>
    <main>
      <section id="recipes-section">
        <h2>Recipes</h2>
        {{#each recipes}}
          <div class="recipe">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
            <a href="/recipes/{{id}}">View Recipe</a>
          </div>
        {{/each}}
      </section>
    </main>
    <footer>
      <p>&copy; 2024 Recipe Website</p>
    </footer>
    <script src="/js/main.js"></script>
  </body>
</html>