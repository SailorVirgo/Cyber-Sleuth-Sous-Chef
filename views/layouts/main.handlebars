<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body data-logged-in="{{logged_in}}">
    <header>
      <h1>CSS Cyber Slueth Sous-Cheif</h1>
      <nav class="navbar navbar-expand-lg navbar-light bg-light ">
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <button type="button" class="btn btn-primary custom-btn" data-toggle="modal" data-target="#loginModal">Login</button>
        </li>
        <li class="nav-item">
          <button type="button" class="btn btn-secondary custom-btn" data-toggle="modal" data-target="#registerModal">Register</button>
        </li>
      </ul>
    </div>
  </nav>

    <!-- Login Modal -->
  <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="loginModalLabel">Login</h5>
          <p>Welcome! Please log in to continue.</p>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="loginUsername">Username</label>
              <input type="text" class="form-control" id="loginUsername" placeholder="Enter username">
            </div>
            <div class="form-group">
              <label for="loginPassword">Password</label>
              <input type="password" class="form-control" id="loginPassword" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary custom-btn">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Register Modal -->
  <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="registerModalLabel">Register</h5>
          <p>Welcome! Please register to continue.</p>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="registerUsername">Username</label>
              <input type="text" class="form-control" id="registerUsername" placeholder="Enter username">
            </div>
            <div class="form-group">
              <label for="registerPassword">Password</label>
              <input type="password" class="form-control" id="registerPassword" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary custom-btn">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>

<script>

</script>
    </header>

    <main>
      {{{body}}}
    </main>

    <footer>
      <p>&copy; 2024 Recipe Website</p>
    </footer>

    <script src="/js/main.js"></script>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>